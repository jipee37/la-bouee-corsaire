{% extends "base.html.twig" %}



{% block stylesheets %}

	 {{ parent() }}

	{% stylesheets filter="scssphp" output="css/profile.css" combine=true
		"scss/profile.scss"
	%}
	<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
	{% endstylesheets %}

{% endblock %}


{% block title %}Mon profil{% endblock %}


{% block body %}

<h1>{{ block('title') }}</h1>

        <div class="row">

            <!-- <div class='col-lg-8 col-md-10 col-sm-12'> -->
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">

                <div class="panel panel-info fos_user_user_show">

                    <div class="panel-heading">
                        <h4 class="panel-title text-center">{{ user.username | upper}}</h4>
                    </div>


                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3 " align="center">
                                <img alt="User Pic" src="../../../../images/man.png" class="img-circle img-responsive">
                            </div>
                            <div class=" col-md-9 col-lg-9 ">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>E-mail :</td>
                                            <td>
																								<a href="#">{{ user.email }}</a>

			<a href="/message/list" class="btn btn-default">Messagerie</a>
			<a href="/logout" class="btn btn-default">Déconnexion</a>


                                            </td>

                                        </tr>
                                        <tr>
                                            <td>Prénom :</td>
                                            <td>{{ user.name }}</td>
                                        </tr>
                                        <tr>
                                            <td>Nom :</td>
                                            <td>{{ user.surname }}</td>
                                        </tr>
                                        <tr>
                                            <td>Adresse :</td>
                                            <td>{{ user.adress }}</td>
                                        </tr>
                                        <tr>
                                            <td>Région :</td>
                                            <td>{{ user.region }}</td>
                                        </tr>
                                        <tr>
                                            <td>Ville :</td>
                                            <td>{{ user.city }}</td>
                                        </tr>
                                        <tr>
                                            <td>Téléphone :</td>
                                            <td>{{ user.phone }}</td>
                                        </tr>
                                        <tr>
                                            <td>Crédit :
                                            </td>
                                            <td>{{ user.hours }}h</td>
                                        </tr>
                                        <tr>
                                            <td>Dernière connexion :
                                            </td>
                                            <td>
                                                {{ user.lastLogin|localizeddate() }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-md btn-primary">
                            <i class="glyphicon glyphicon-envelope"></i>
                        </a>
                        <span class="pull-right">
                            <a href="/profile/edit" data-original-title="Edition du profil" data-toggle="tooltip" type="button" class="btn btn-md btn-warning">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                            <a href="/logout" data-original-title="Deconnexion" data-toggle="tooltip" type="button" class="btn btn-info btn-md">
                                <i class="glyphicon glyphicon-log-out"></i>
                            </a>
                        </span>

                    </div>
                </div>
            </div>
        </div>


{% endblock body %}


{% block javascripts %}
	{{ parent() }}



{% endblock %}
